<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuyu.mapper.pcms.PcmsSupplierCompanyMapper">


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
		vendor_id,
		company,
		create_time
	</sql>

    <!-- 根据供应商编号查询供应商信息 -->
    <select id="selectByVendorIdAndCompany" resultType="com.kuyu.model.pcms.PcmsSupplierCompanyModel"
            parameterType="com.kuyu.model.pcms.PcmsSupplierCompanyModel">
        SELECT
        <include refid="Base_Column_List" />
        FROM pcms_supplier_company
        <where>
            <if test="vendor_id != null and vendor_id != ''">
                vendor_id = #{vendor_id}
            </if>
            <if test="company != null and company != ''">
                AND company = #{company}
            </if>
        </where>
    </select>

</mapper>